<div class="form-wrapper">
  <div class="form-horizontal">
      <%= simple_form_for @post do |f| %>
      <div class="form-group">
        <%= f.input :image %>
      </div>
      <div class="form-group text-center">
        <%= f.input :caption, class: "form-control"%>
      </div>
      <div class="form-group text-center">
        <%= f.button :submit, class: "btn btn-success" %>
      </div>
  </div>
</div>
  <% end %>
